<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
    version="4.0">
    
    <servlet>
        <servlet-name>FlightsServlet</servlet-name>
        <servlet-class>co.edu.unbosque.controller.FlightServlet</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>FlightSearchServlet</servlet-name>
        <servlet-class>co.edu.unbosque.controller.FlightSearchServlet</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>BookingServlet</servlet-name>
        <servlet-class>co.edu.unbosque.controller.BookingServlet</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>BookingsServlet</servlet-name>
        <servlet-class>co.edu.unbosque.controller.BookingsServlet</servlet-class>
    </servlet>


    <servlet-mapping>
        <servlet-name>FlightSearchServlet</servlet-name>
        <url-pattern>/search-flight</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>BookingServlet</servlet-name>
        <url-pattern>/booking</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>BookingsServlet</servlet-name>
        <url-pattern>/bookings</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>FlightsServlet</servlet-name>
        <url-pattern>/flights</url-pattern>
    </servlet-mapping>

</web-app>
